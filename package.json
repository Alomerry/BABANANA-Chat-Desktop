{
  "name": "twitchchat",
  "version": "1.0.0",
  "description": "**Twitch Chat Desktop** 是 [Twitch ObsChat](https://chat.alomerry.com/) 的 x86 应用。",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "start_with_log": "electron . --enable-logging",
    "build_win64": "electron-packager . TwitchChat --out=./build/ --overwrite=true --platform=win32 --arch=x64 --icon=assets/img/app.ico --asar=true --ignore=node_modules/electron-* --ignore=node_modules/.bin --ignore=.git --ignore=dist --prune=true ",
    "build_win32": "electron-packager . TwitchChat --out=./build/ --overwrite=true --platform=win32 --icon=assets/img/app.ico --ignore=node_modules/electron-* --ignore=node_modules/.bin --ignore=.git --ignore=dist --prune=true "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alomerry/TwitchChat.git"
  },
  "author": "alomerry",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Alomerry/TwitchChat/issues"
  },
  "homepage": "https://github.com/Alomerry/TwitchChat#readme",
  "devDependencies": {
    "electron": "^11.2.1",
    "electron-packager": "^15.2.0"
  },
  "dependencies": {
    "bootstrap-icons": "^1.3.0"
  }
}
